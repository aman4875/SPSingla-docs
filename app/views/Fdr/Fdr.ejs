    <script>
        let isFetching = false;
        let docIdToDelete = null;
        let totalPages
        let bankID = null
        let filters = {
            page: 1,
            limit: 10,
        };

        $('#scroll-left').on('click', function () {
            $('.scrollable-datatable').animate({ scrollLeft: '-=300' }, 200);
        });

        $('#scroll-right').on('click', function () {
            $('.scrollable-datatable').animate({ scrollLeft: '+=300' }, 200);
        });

        function renderTabledata(response) {
            if (response.payload.documents && response.payload.documents.length > 0) {
                $("#table-status").empty();
                $(".table-content").empty();

                let rowsHtml = "";
                response.payload.documents.forEach((data) => {
                    let rowHtml = `
                        <div class="nk-tb-item text-left table-content ${data.claim_pass ? "rowHighlight" : ""}">
                        <% if(token.user_role != 3) { %>
                            <div class="nk-tb-col text-start editDocument">
                            <span style="margin-right: 8px;">
                                <a href="/edit-fdr/${btoa(data.doc_id)}">
                                <em class="icon ni ni-edit-fill"></em>
                                </a>
                            </span>
                            <span class="${data.doc_bg_selected ? 'disable' : ''}" 
                                    id="deleteDoc" 
                                    style="cursor: pointer;" 
                                    data-bank_id="${data.bank_id}" 
                                    data-id="${data.doc_id}">
                                <em style="color: #d84040;" class="icon ni ni-trash-fill"></em>
                            </span>
                            </div>
                        <% } %>

                        <div class="nk-tb-col text-start">
                            <span>${data.doc_bank_name || "-"}</span>
                        </div>
                        <div class="nk-tb-col text-start">
                            <span>${data.doc_purpose || "-"}</span>
                        </div>
                        <div class="nk-tb-col text-start">
                            <span>${data.doc_fdr_no || "-"}</span>
                        </div>
                        <div class="nk-tb-col text-start">
                            <span>${data.doc_original_issue_date || "-"}</span>
                        </div>
                        <div class="nk-tb-col text-start">
                            <span>${data.doc_interest_payout_clause || "-"}</span>
                        </div>
                        <div class="nk-tb-col text-start">
                            <span>${data.doc_deposit_amount || "-"}</span>
                        </div>
                        <div class="nk-tb-col text-start">
                            <span>${data.doc_interest_rate ? data.doc_interest_rate + ".00%" : "-"}</span>
                        </div>
                        <div class="nk-tb-col text-start">
                            <span>${data.doc_tds_rate ? data.doc_tds_rate + ".00%" : "-"}</span>
                        </div>
                        <div class="nk-tb-col text-start">
                            <span>${data.doc_tenor || "-"}</span>
                        </div>
                        <div class="nk-tb-col text-start">
                            <span>${data.doc_new_tenor || "-"}</span>
                        </div>
                        <div class="nk-tb-col text-start">
                            <span>${data.doc_renewal || "-"}</span>
                        </div>
                        <div class="nk-tb-col text-start">
                            <span>${data.doc_renewal_date || "-"}</span>
                        </div>
                        <div class="nk-tb-col text-start">
                            <span>${data.doc_renewal_amount || "-"}</span>
                        </div>
                        <div class="nk-tb-col text-start">
                            <span>${data.doc_maturity_date || "-"}</span>
                        </div>
                        <div class="nk-tb-col text-start">
                            <span>${data.doc_maturity_amount || "-"}</span>
                        </div>
                        <div class="nk-tb-col text-start">
                            <span>${data.doc_interest || "-"}</span>
                        </div>
                        <div class="nk-tb-col text-start">
