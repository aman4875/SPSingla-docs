    <script>
        let isFetching = false;
        let docIdToDelete = null;
        let docIdToEdit = null;
        let initialFormDataEntries = {
            bank_code: null,
            bank_name: null,
            bank_branch: null,
        };

        $(document).on("click", ".editBtn", function (event) {
            const bankCode = $(this).data("code");
            const bankName = $(this).data("name");
            const bankBranch = $(this).data("branch");
            const docId = $(this).data("id");
            docIdToEdit = docId

            $("#bank_code_edit").val(bankCode).trigger("change");
            $("#bank_name_edit").val(bankName).trigger("change");
            $("#bank_branch_edit").val(bankBranch).trigger("change");
            $("#EditmodalForm").modal("show");
            initialFormDataEntries = {
                bank_code: bankCode,
                bank_name: bankName,
                bank_branch: bankBranch,
            };
        });

        $("#bankForm").submit(function (event) {
            event.preventDefault();
            if (!this.checkValidity()) {
                return false;
            }
            NioApp.handleButtonState("saveUserButton", "Save", true);
            let formData = {
                bank_code: $("#bank_code").val(),
                bank_name: $("#bank_name").val(),
                bank_branch: $("#bank_branch").val(),
            };

            let url = "/bank-master/add-bank";
            let method = "POST";

            fetch(url, {
                method: method,
                headers: {
                    "Content-Type": "application/json",
                },
                body: JSON.stringify(formData),
            })
                .then((response) => response.json())
                .then((data) => {
                    if (data.status === 200) {
                        NioApp.Toast(
                            "<h5>Saved Successfully</h5><p>Document created successfully!</p>",
                            "success"
                        );
                        NioApp.handleButtonState("saveUserButton", "Save", false);
                        $(this)[0].reset();
                        getAllBanks();
                        $("#modalForm").modal("hide");
                    } else {
                        NioApp.handleButtonState("saveUserButton", "Save", false);
                        NioApp.Toast(
                            `<h5>Failed to Save</h5><p>${data.msg || 'Document could not be saved!'}</p>`,
                            "error"
                        );
                    }
                })
                .catch((error) => {
                    console.error("Error:", error);
                });
        });


        function getAllBanks() {
            if (isFetching) return; // Exit if already fetching
            isFetching = true;
            const url = "/bank-master/get-all-banks";
            fetch(url, {
                method: "GET",
                headers: {
                    "Content-Type": "application/json",
                },
            })
                .then((response) => response.json())
                .then((data) => {
                    if (data.status === 200) {
                        $(".table-content").remove()
                        isFetching = false;
                        renderBankList(data.data);
                    } else {
                        isFetching = false;
                    }
                })
                .catch((error) => {
                    isFetching = false;
                    console.error("Error:", error);
                });
        }

        $("#EditmodalForm form").submit(function (event) {
            event.preventDefault();

            // Call checkValidity on the form element
            if (!this.checkValidity()) {
                return false;
            }
            let formData = {
                bank_code: $("#bank_code_edit").val(),
                bank_name: $("#bank_name_edit").val(),
                bank_branch: $("#bank_branch_edit").val(),
            }

            const keys = Object.keys(formData);
            const initialKeys = Object.keys(initialFormDataEntries);
            let hasChanges = false;

            keys.forEach(key => {
                const newValue = formData[key];
                const initialValue = initialFormDataEntries[key];

                // Convert both values to strings for consistent comparison
                const newValueStr = newValue !== undefined && newValue !== null ? newValue.toString().trim() : "";
                const initialValueStr = initialValue !== undefined && initialValue !== null ? initialValue.toString().trim() : "";

                if (newValueStr !== initialValueStr) {
                    hasChanges = true;
                }
            });


            if (!hasChanges) {
                return NioApp.Toast("<h5>No Changes</h5><p>No changes to save</p>", "info");
            }

            formData.docId = docIdToEdit;
            fetch("/bank-master/edit-bank", {
                method: "post",
                headers: {
                    "Content-Type": "application/json",
                },
                body: JSON.stringify(formData),
            })
                .then((response) => response.json())
                .then((data) => {
                    if (data.status === 200) {
                        NioApp.Toast(
                            "<h5>Updated Successfully</h5><p>Bank updated successfully!</p>",
                            "success"
                        );
                        getAllBanks();
                        $("#EditmodalForm").modal("hide");
                    } else {
                        NioApp.Toast(
                            "<h5>Error</h5><p>Failed to update the bank!</p>",
                            "error"
                        );
                    }
                })
                .catch((error) => console.error("Error:", error));
        });


        $(document).ready(function () {
            getAllBanks();
        });
    </script>
